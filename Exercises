
'exercise 3'

SELECT  funcionarios.PrimeiroNome, funcionarios.UltimoNome, funcionarios.Funcao, departamento.nome
FROM funcionarios JOIN departamentos
ON funcionarios.CodigoDepartamento = departamentos.Codigo
WHERE Funcao = 'gerente'
ORDER BY nome;


'exercise 4'

SELECT departamento.Nome, funcionarios.Salario
FROM funcionarios JOIN departamentos
ON funcionarios.CodigoDepartamento = departamentos.Codigo
ORDER BY Nome;


